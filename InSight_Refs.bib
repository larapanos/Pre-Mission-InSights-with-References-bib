@article{Duffy1989,
abstract = {Comparison of seismic velocities in mantle minerals, under mantle conditions, with seismic data is a first step toward constraining mantle chemistry. The calculation, however, is uncertain due to lack of data on certain physical properties. "Global" systematics have not proved very useful in estimating these properties, particularly for the shear parameters. A new approach to elasticity estimation is used in this study to produce estimates of unknown quantities, primarily pressure and temperature derivatives of elastic moduli, from the structural and chemical trends evident in the large amount of elasticity data now available. These trends suggest that the derivatives of unmeasured high-pressure phases can be estimated from "analogous" low-pressure phases. Us- ing these predictions and the best available measurements, seismic velocities are computed along high-temperature ariabats for a set of mantle minerals using third-order finite strain theory. The calculation of density and moduli at high temperature, to initiate the ariabat, must be done with care since parameters such as thermal expansion are not independent of temperature. Both com- pressional and shear seismic profiles are well-matched by a mineralogy dominated by clinopyroxene and garnet and with an elivine content of approximately 40{\%} by volume. Between 670 and 1000 km, perovskite alone provides a good fit to the seismic velocities. Combining seismic velocities with recent phase equilibria data for a hypothetical pure elivine mantle suggests that a mineralogy with a maximum of 35{\%} elivine {\{}shear profile) or 40-53{\%} elivine {\{}compressional profile) by volume can satisfy the constraint imposed by the 400-km discontinuity. Other features of the upper mantle can then be matched by appropriate combinations of pyroxenes, garnets, and their high-pressure equivalents. While mantle models with a substantially larger fraction of elivine cannot be ruled out, they are acceptable only if the derivatives of the spinel phases are substantially different from elivine and deviate from trends in the larger data set.}}},
author = {Duffy, T. S. and Anderson, D. L.},
doi = {10.1029/JB094iB02p01895},
isbn = {0148-0227},
issn = {01480227},
journal = {Journal of Geophysical Research},
number = {B2},
pages = {1895--1912},
title = {{Seismic velocities in mantle minerals and the mineralogy of the upper mantle}},
volume = {94},
year = {1989}
}
@article{Birch1952,
abstract = {The observed variation of the seismic velocities with depth, below$\backslash$nthe crust, is examined with reference to the variation to be expected$\backslash$nin a homogeneous medium. A general equation is derived for the variation$\backslash$nof the quantity, {\&}{\#}981;=VP2-4/3{\&}{\#}8201;VS2 , in a homogeneous gravitating$\backslash$nlayer with an arbitrary gradient of temperature. The parameters of$\backslash$nthis equation are then discussed in terms of the experimental and$\backslash$ntheoretical relations for solids. The principal parameter is ({\&}{\#}8706;KT$\backslash$n/{\&}{\#}8706;P) T , the rate of change of isothermal incompressibility$\backslash$nwith pressure, which can be found for large compressions from Bridgman's$\backslash$nmeasurements. Comparison of observed and expected rates of variation$\backslash$nof {\&}{\#}981; throughout the Earth's interior leads to conclusions regarding$\backslash$nhomogeneity and, with a larger uncertainty, to estimates of temperature.A$\backslash$nshadow zone at a depth of about 100 km, as suggested by Gutenberg,$\backslash$nmay be accounted for by a gradient of temperature of about 6{\^{A}}°/km$\backslash$nin a homogeneous layer of ultrabasic rock. Between depths of about$\backslash$n900 and 2,900 km, the mantle appears to be substantially uniform,$\backslash$nand at a relatively uniform temperature of the order of several thousand$\backslash$ndegrees. Between about 200 and 900 km, the rate of rise of velocity$\backslash$nis too great for a homogeneous layer, and indicates a gradual change$\backslash$nof composition, or of phase, or both. New phases are required to$\backslash$naccount for the high elasticity of the deeper part of the mantle$\backslash$n(below 900 km), and it is suggested that, beginning at about 200$\backslash$nto 300 km, there is a gradual shift toward high-pressure modifications$\backslash$nof the ferro-magnesian silicates, probably close-packed oxides, with$\backslash$nthe transition complete at about 800 to 900 km. There may also be$\backslash$na concentration of alumina, lime, and alkalis toward the upper part$\backslash$nof the mantle, in and above the transitional layer but below the$\backslash$ncrust, existing in minerals of high elasticity such as garnets and$\backslash$njadeites. The transitional layer appears to hold the key to a number$\backslash$nof major geophysical problems.The velocities in the core and inner$\backslash$ncore are also reviewed. The inner core is most simply interpreted$\backslash$nas crystalline iron, the outer part as liquid iron, perhaps alloyed$\backslash$nwith a small fraction of lighter elements. The density and compressibility$\backslash$nof iron at high pressures are estimated with the aid of the experimental$\backslash$ncompressions of the alkali metals; the central density is found to$\backslash$nbe about 15. Several other recent proposals regarding the crust are$\backslash$ndiscussed.},
