doi = {10.1016/J.EPSL.2013.11.047},
issn = {0012-821X},
journal = {Earth and Planetary Science Letters},
month = {feb},
pages = {27--37},
publisher = {Elsevier},
title = {{3D spherical models of Martian mantle convection constrained by melting history}},
