publisher = {Elsevier},
title = {{Mantle dynamics with pressure- and temperature-dependent thermal expansivity and conductivity}},
url = {https://www.sciencedirect.com/science/article/pii/S0031920113000289},
volume = {217},
year = {2013}
}
